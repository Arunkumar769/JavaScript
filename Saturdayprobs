let num = parseInt(prompt());
        switch (true) {
            case num > 0:
                document.write("Number is Positive")
                 break;
             case num == 0:
                 document.write("Number is Zero")
                 break;
             case num < 0:
                 document.write("Number is Negative", "<br>")
                 break;
             default:
                 document.write("Invalid Input")
         }



