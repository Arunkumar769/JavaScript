         let day = (prompt("Enter a day"));
         switch (day) {
             case "Monday":
             case "Tuesday":
             case "Wednesday":
             case "Thursday":
                 document.write("Its a week day")
                 break;
            
             case "Friday":
             case "Saturday":
             case "Sunday":
                 document.write("Its a Weekend")
                 break;
             default:
                 document.write("Invalid Day")
       }




        let units = parseInt(prompt("Enter the number of units used"));
let bill = 0;

if (units <= 50) {
    bill = units * 2;
} else if (units <= 150) {
    bill = 50 * 2 + (units - 50) * 3;
} else if (units <= 250) {
    bill = (50 * 2 )+ 100 * 3 + (units - 150) * 5;
} else {
    bill = (50 * 2) + (100 * 3) + (100 * 5) + (units - 250) * 8;
}

bill = bill + (bill * 20) / 100;
document.write("The total electricity bill is: " + bill);

